# API Protection Configuration
REDIS_URL=redis://localhost:6379
ENABLE_REDIS_RATE_LIMIT=false

# Request limits
MAX_REQUEST_SIZE=1048576
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100

# CORS settings (use specific domains in production)
ALLOWED_ORIGINS=*

# Rate limits per tier (requests per day) - optimized for 1 call/minute usage
FREE_TIER_DAILY_LIMIT=50
BASIC_TIER_DAILY_LIMIT=200
PREMIUM_TIER_DAILY_LIMIT=500
ENTERPRISE_TIER_DAILY_LIMIT=1500

# Rate limits per tier (requests per minute) - strict for 1 call/minute usage
FREE_TIER_MINUTE_LIMIT=2
BASIC_TIER_MINUTE_LIMIT=3
PREMIUM_TIER_MINUTE_LIMIT=5
ENTERPRISE_TIER_MINUTE_LIMIT=10
