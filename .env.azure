# Azure App Service Configuration

# Python version (for Azure)
PYTHON_VERSION=3.11

# App Service startup command
STARTUP_COMMAND=startup.sh

# Port configuration
PORT=8000

# Database connection settings for Azure
# These should be configured as App Settings in Azure Portal:
# - AZURE_SQL_SERVER
# - AZURE_SQL_DATABASE  
# - AZURE_SQL_USERNAME
# - AZURE_SQL_PASSWORD

# Environment
ENVIRONMENT=production
